{% extends 'base.html.twig' %}

{% block title %}Uploads index{% endblock %}

{% block body %}
    
<div class="container">
    <h1>Uploads index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for upload in uploads %}
            <tr>
                <td>{{ upload.id }}</td>
                <td>{{ upload.title }}</td>
                <td>{{ upload.image }}</td>
                <td>{{ upload.description }}</td>
                <td>
                    <a href="{{ path('uploads_show', {'id': upload.id}) }}">show</a>
                    <a href="{{ path('uploads_edit', {'id': upload.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('uploads_new') }}">Create new</a>
</div>
{% endblock %}
