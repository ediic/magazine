{% extends 'base.html.twig' %}

{% block title %}Magazin Online{% endblock %}

{% block body %}
<div class="container">    
  <div class="row">
    {% for upload in uploads %}
    <div class="col-sm-4">
      <div class="panel panel-primary">
        <div class="panel-heading">{{ upload.title }}</div>
        <div class="panel-body">
          <a href="{{ asset('uploads/' ~ upload.image) }}" target="_blank">
            <img src="{{ asset('uploads/' ~ upload.image) }}" alt="Image">
          </a>
        </div>
        <div class="panel-footer">{{ upload.description }}</div>
      </div>
    </div>
    {% endfor %}
  </div>
</div><br><br>

{{ include('home/footer.html.twig') }}

{% endblock %}
